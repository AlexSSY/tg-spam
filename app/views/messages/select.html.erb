<div class="space-y-9">
  <p class="text-center font-bold text-sm">Message Select</p>

  <%= render partial: "messages/form", locals: { message: @message, force_path: select_create_messages_path } %>

  <% if current_user.messages.any? %>
    <%= render current_user.messages %>
  <% else %>
    <p class="text-center">You don't have any messages</p>
  <% end %>
</div>